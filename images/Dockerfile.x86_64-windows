# Use the Ubuntu base image
FROM ubuntu:latest

# Install necessary dependencies
RUN dpkg --add-architecture i386
RUN apt-get update && apt-get install -y \
    wine64 \
    wine32:i386 \
    python3 \
    msitools \
    ca-certificates \
    winbind \
    wget \
    git \
    unzip \
    cabextract \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Download MSVC
RUN git clone https://github.com/mstorsjo/msvc-wine.git && \
    cd msvc-wine && \
    echo "yes" | ./vsdownload.py --dest ../my_msvc/opt/msvc && \
    ./install.sh ../my_msvc/opt/msvc && \
    cd .. && rm -r msvc-wine

# Add the python installation
COPY python-3.10.11-x86_64-windows /python-3.10.11-x86_64-windows
COPY python-3.11.9-x86_64-windows /python-3.11.9-x86_64-windows
COPY python-3.12.9-x86_64-windows /python-3.12.9-x86_64-windows
COPY python-3.13.2-x86_64-windows /python-3.13.2-x86_64-windows