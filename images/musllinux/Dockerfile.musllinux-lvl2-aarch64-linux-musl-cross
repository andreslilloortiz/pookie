FROM musllinux-lvl1-base:latest

# Download and install the musl cross compiler for aarch64
RUN wget https://more.musl.cc/10.2.1/x86_64-linux-musl/aarch64-linux-musl-cross.tgz && \
    tar -xvzf aarch64-linux-musl-cross.tgz && \
    rm -f aarch64-linux-musl-cross.tgz

# Add the cross compiler to the PATH
ENV PATH="/aarch64-linux-musl-cross/bin:${PATH}"

# Install qemu
RUN apk add --no-cache \
    qemu-aarch64