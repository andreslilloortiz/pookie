FROM manylinux-lvl1-base:latest

RUN apt-get update && apt-get install -y \
    gcc-s390x-linux-gnu \
    && rm -rf /var/lib/apt/lists/*

RUN ln -s /usr/s390x-linux-gnu/lib/ld64.so.1 /lib/ld64.so.1